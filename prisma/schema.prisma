// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProductCategory {
  PLUGIN
  FONT
  IMAGE
  TEMPLATE
  SCRIPT
}

enum OrderStatus {
  PENDING
  COMPLETED
  FAILED
}

model Product {
  id              String          @id @default(cuid())
  title           String
  description     String
  price           Int             // Stored in cents (e.g., 2900 = $29.00)
  originalPrice   Int?            @map("original_price") // Optional original price for discount calculation
  category        ProductCategory
  thumbnailUrl    String          @map("thumbnail_url")
  previewVideoUrl String?         @map("preview_video_url")
  downloadLink    String          @map("download_link") // Private field, should not be exposed easily
  
  isDeleted       Boolean         @default(false)
  
  createdAt       DateTime        @default(now()) @map("created_at")
  updatedAt       DateTime        @updatedAt @map("updated_at")

  orders          Order[]

  @@map("products")
}

model Order {
  id            String      @id @default(cuid())
  userEmail     String      @map("user_email")
  status        OrderStatus @default(PENDING)
  transactionId String?     @map("transaction_id")
  
  productId     String      @map("product_id")
  product       Product     @relation(fields: [productId], references: [id])
  
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  @@map("orders")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  balance       Int       @default(0) // Balance in cents
  
  isVip         Boolean   @default(false) @map("is_vip")
  vipSince      DateTime? @map("vip_since")
  
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  @@map("users")
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  excerpt   String
  content   String
  thumbnail String
  createdAt DateTime @default(now()) @map("created_at")
  
  @@map("posts")
}
